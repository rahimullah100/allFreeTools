{
  "name": "allFreeTools",
  "short_name": "allFreeTools",
  "description": "Free online tools for text, images, developers, and more",
  "start_url": "/",
  "display": "standalone",
  "background_color": "#ffffff",
  "theme_color": "#4a90e2",
  "orientation": "portrait",
  "icons": [
    {
      "src": "icons/icon-72x72.png",
      "sizes": "72x72",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-96x96.png",
      "sizes": "96x96",
      "type": "image/png"
    },
    {
      "src": "icons/icon-128x128.png",
      "sizes": "128x128",
      "type": "image/png"
    },
    {
      "src": "icons/icon-144x144.png",
      "sizes": "144x144",
      "type": "image/png"
    },
    {
      "src": "icons/icon-152x152.png",
      "sizes": "152x152",
      "type": "image/png"
    },
    {
      "src": "icons/icon-192x192.png",
      "sizes": "192x192",
      "type": "image/png",
      "purpose": "any maskable"
    },
    {
      "src": "icons/icon-384x384.png",
      "sizes": "384x384",
      "type": "image/png"
    },
    {
      "src": "icons/icon-512x512.png",
      "sizes": "512x512",
      "type": "image/png"
    }
  ],
  "screenshots": [
    {
      "src": "screenshots/screenshot1.png",
      "sizes": "1280x720",
      "type": "image/png",
      "form_factor": "wide",
      "label": "allFreeTools Homepage"
    }
  ],
  "categories": ["utilities", "productivity", "tools"],
  "shortcuts": [
    {
      "name": "Text Tools",
      "short_name": "Text",
      "description": "Access all text manipulation tools",
      "url": "/pages/text-tools.html",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Image Tools",
      "short_name": "Image",
      "description": "Access all image processing tools",
      "url": "/pages/image-tools.html",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    },
    {
      "name": "Developer Tools",
      "short_name": "Dev",
      "description": "Access all developer utilities",
      "url": "/pages/dev-tools.html",
      "icons": [{ "src": "/icons/icon-192x192.png", "sizes": "192x192" }]
    }
  ],
  "related_applications": [
    {
      "platform": "webapp",
      "url": "https://allfreetools.com/site.webmanifest"
    }
  ],
  "prefer_related_applications": false,
  "id": "/?source=pwa",
  "launch_handler": {
    "client_mode": "navigate-existing"
  },
  "display_override": ["window-controls-overlay", "standalone", "browser"],
  "edge_side_panel": {
    "preferred_width": 480
  },
  "permissions": ["clipboardWrite", "clipboardRead"],
  "file_handlers": [
    {
      "action": "/file-handler",
      "accept": {
        "text/*": [".txt", "text/plain"],
        "image/*": [".jpg", ".jpeg", ".png", ".gif", ".webp", ".svg"],
        "application/json": [".json"],
        "application/xml": [".xml"]
      },
      "icons": [
        {
          "src": "/icons/icon-192x192.png",
          "sizes": "192x192",
          "type": "image/png"
        }
      ],
      "launch_type": "single-client"
    }
  ]
}
